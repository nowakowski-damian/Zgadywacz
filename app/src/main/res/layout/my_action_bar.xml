<LinearLayout android:id="@+id/playActionBar"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:background="@color/actionBarBack"
    android:padding="5dp">


    <LinearLayout
        android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:gravity="start"
        android:layout_weight="1">

        <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/clock"

            />

        <TextView
            android:id="@+id/guess_time_actionbar"
            android:background="@color/transparent"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:padding="5dp"
            android:text="00:00"/>

     </LinearLayout>



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:gravity="center"
        android:layout_weight="1">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/one_die"

            />

        <TextView
            android:id="@+id/guess_turns_actionbar"
            android:background="@color/transparent"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:padding="5dp"
            android:text="12"/>

    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:gravity="end"
        android:layout_weight="1">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/coins4"

            />
        <TextView
            android:id="@+id/guess_cash_actionbar"
            android:background="@color/transparent"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="$123456"
            android:padding="5dp"/>

    </LinearLayout>


</LinearLayout>


