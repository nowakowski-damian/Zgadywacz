<?xml version="1.0" encoding="utf-8"?>

<LinearLayout    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/popup_window"
>

    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/end_popup_win_or_loss_textview"
        style="@style/settingsFont"
        android:background="@color/transparent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/end_popup_youwin"
        android:textSize="35sp"
        android:layout_gravity="center"/>


    <LinearLayout
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:orientation="horizontal">

        <TextView
        style="@style/settingsFont"
        android:background="@color/transparent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/end_popup_correct"
        android:textSize="20sp"
        android:layout_gravity="center"/>

        <TextView
            android:id="@+id/end_popup_corect_words_textview"
            style="@style/settingsFont"
            android:background="@color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:id="@+id/end_popup_corect_cash_textview"
            style="@style/settingsFont"
            android:background="@color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+20"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:gravity="right"
            android:layout_weight="1"
           />

        <ImageView
            android:layout_width="40sp"
            android:layout_height="28sp"
            android:background="@drawable/coins4"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            />




    </LinearLayout>



    <LinearLayout
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:orientation="horizontal">

        <TextView

            style="@style/settingsFont"
            android:background="@color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/end_popup_incorrect"
            android:textSize="20sp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/end_popup_incorect_words_textview"
            style="@style/settingsFont"
            android:background="@color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:id="@+id/end_popup_incorect_cash_textview"
            style="@style/settingsFont"
            android:background="@color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-0"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:gravity="right"
            android:layout_weight="1"
            />

        <ImageView
            android:layout_width="40sp"
            android:layout_height="28sp"
            android:background="@drawable/coins4"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            />




    </LinearLayout>


    <LinearLayout
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:orientation="horizontal">

        <TextView
            style="@style/settingsFont"
            android:background="@color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/end_popup_winbonus"
            android:textSize="20sp"
            android:layout_gravity="center"/>



        <TextView
            android:id="@+id/end_popup_winbonus_cash_textview"
            style="@style/settingsFont"
            android:background="@color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+0"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:gravity="right"
            android:layout_weight="1"
            />

        <ImageView
            android:layout_width="40sp"
            android:layout_height="28sp"
            android:background="@drawable/coins4"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            />




    </LinearLayout>


    <LinearLayout
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:orientation="horizontal">

        <TextView
            style="@style/settingsFont"
            android:background="@color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/end_game_popup_tries_bonus"
            android:textSize="20sp"
            android:layout_gravity="center"/>



        <TextView
            android:id="@+id/end_popup_tries_bonus_textview"
            style="@style/settingsFont"
            android:background="@color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+0"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:gravity="right"
            android:layout_weight="1"
            />

        <ImageView
            android:layout_width="40sp"
            android:layout_height="28sp"
            android:background="@drawable/coins4"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            />




    </LinearLayout>



    <LinearLayout
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/transparent">

        <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:orientation="horizontal">

        <TextView
            style="@style/settingsFont"
            android:background="@color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/end_popup_sum"
            android:textSize="25sp"
            android:layout_gravity="center"/>



        <TextView
            android:id="@+id/end_popup_sum_cash_textview"
            style="@style/settingsFont"
            android:background="@color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+20"
            android:textSize="25sp"
            android:layout_gravity="center"
            android:gravity="right"
            android:layout_weight="1"
            />

        <ImageView
            android:layout_width="40sp"
            android:layout_height="28sp"
            android:background="@drawable/coins4"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            />




    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_marginTop="6dp"
            android:background="@color/transparent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">


            <TextView
                android:padding="3dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:id="@+id/end_popup_trynextword_button"
                android:background="@color/actionBarBack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:text="@string/end_popup_playagain"
                android:layout_gravity="center"
                android:gravity="center"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/transparent"
            android:minHeight="34sp"
            >

            <TextView
                android:padding="3dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/end_popup_settings_button"
                android:background="@color/actionBarBack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:text="@string/end_popup_settings"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1"
                />


            <TextView
                android:background="@color/transparent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                />

            <TextView
                android:padding="3dp"
                android:layout_marginRight="5dp"
                android:id="@+id/end_popup_mainmenu_button"
                android:background="@color/actionBarBack"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="@string/end_popup_mainmenu"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1"
                />

        </LinearLayout>




    </LinearLayout>





</LinearLayout>