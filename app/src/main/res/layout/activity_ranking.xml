<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.thirteendollars.guesser.app.Ranking">


    <TextView
        android:background="@drawable/onesided_concentrator_shape"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:textStyle="bold"
        android:text="Ranking"
        android:id="@+id/ranking_title"
        android:gravity="center"
        android:layout_centerHorizontal="true" />
    <TextView

        android:background="@drawable/onesided_concentrator_shape"
        android:rotation="180"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/ranking_ending"
        />
    <ListView
        android:layout_below="@id/ranking_title"
        android:layout_above="@id/ranking_ending"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#cdffffff"
        android:id="@+id/listView"
        xmlns:android="http://schemas.android.com/apk/res/android" />





</RelativeLayout>

