
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/transparent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never">

<LinearLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

                <LinearLayout

                    android:background="@drawable/concentrator_shape_lower_padding"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:id="@+id/create_words_number"
                        android:background="@color/transparent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:text="Words number: 0"/>


                    <TextView
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:id="@+id/create_length_limit"
                        android:layout_marginTop="2dp"
                        android:background="@color/transparent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:text="Length limit: 5"/>

                    <TextView
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:id="@+id/create_words_limit"
                        android:layout_marginTop="2dp"
                        android:background="@color/transparent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:text="Words limit: 1"/>

                    <LinearLayout
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="4dp"
                        android:layout_marginTop="2dp"
                        android:background="@color/transparent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                            <TextView
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:background="@color/transparent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:textSize="25sp"
                                android:text="@string/create_incomes"
                                />

                            <ImageView
                                android:layout_marginRight="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:background="@drawable/coins4"/>

                            <TextView
                                android:id="@+id/create_incomes_only"
                                android:textStyle="bold"
                                android:layout_gravity="center"
                                android:background="@color/transparent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:textSize="25sp"
                                android:text="0$"
                                android:gravity="right"
                                />
                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                        android:background="@color/transparent"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1">

                    <Button
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        style="@style/myButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/create_add_word_button"
                        android:onClick="onAddWord"/>
                    <Button
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        style="@style/myButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/create_draw_out_button"
                        android:onClick="onDrawOut"/>

                </LinearLayout>

        </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="5dp"
    android:orientation="horizontal">

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:text="@string/create_your_words_list"
        android:gravity="left"
        android:layout_weight="1"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:background="@drawable/ic_autorenew_white_36dp"
        android:onClick="onRefresh"
        />


</LinearLayout>




        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/space_for_own_word_records"
            android:background="@drawable/concentrator_shape_lower_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


        </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/transparent"
        />


</LinearLayout>


</ScrollView>







