<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.thirteendollars.guesser" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".app.InitializeOnceOnStart"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".app.MainMenu"
            android:label="@string/app_first_activity_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".app.Credits"
            android:label="@string/title_activity_credits"
            >
        </activity>
        <activity
            android:name=".app.PlayActivity"
            android:label="@string/title_activity_play"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".app.GuessActivity"
            android:label="@string/title_activity_guess"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".app.UpgradeActivity"
            android:label="@string/title_activity_upgrade"
            android:screenOrientation="landscape" >
        </activity>
    </application>

</manifest>
